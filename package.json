{
  "name": "romdler",
  "version": "1.0.0",
  "description": "A Node.js CLI for downloading, organizing, artwork and deduplicating ROM collections.",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "cli": "tsx src/index.ts",
    "build": "tsc",
    "check-all": "tsc --noEmit && eslint src tests --ext .ts,.tsx && vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts,.tsx",
    "lint:fix": "eslint src tests --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\""
  },
  "keywords": [
    "downloader",
    "zip",
    "archive",
    "scraper",
    "coverart",
    "boxart"
  ],
  "license": "MIT",
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "cli-progress": "^3.12.0",
    "ink": "^6.6.0",
    "log-update": "^7.0.2",
    "react": "^19.2.3",
    "sharp": "^0.34.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "4.0.17",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@10.28.0+sha512.05df71d1421f21399e053fde567cea34d446fa02c76571441bfc1c7956e98e363088982d940465fd34480d4d90a0668bc12362f8aa88000a64e83d0b0e47be48"
}
